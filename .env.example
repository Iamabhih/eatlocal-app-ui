# ====================================
# SMASH ENVIRONMENT VARIABLES
# ====================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from your Supabase project settings -> API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ====================================
# GOOGLE MAPS API
# ====================================
# Required for ride-sharing feature and location services
# Get from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ====================================
# PAYFAST PAYMENT GATEWAY (SOUTH AFRICA)
# ====================================
# Production credentials (get from PayFast merchant dashboard)
VITE_PAYFAST_MERCHANT_ID=your-merchant-id
VITE_PAYFAST_MERCHANT_KEY=your-merchant-key
VITE_PAYFAST_PASSPHRASE=your-secure-passphrase

# Sandbox credentials for testing (optional)
# VITE_PAYFAST_MERCHANT_ID=10000100
# VITE_PAYFAST_MERCHANT_KEY=46f0cd694581a
# VITE_PAYFAST_PASSPHRASE=your-test-passphrase

# ====================================
# APPLICATION SETTINGS
# ====================================
# Set to 'production' for live deployment
VITE_APP_ENV=development

# Application URL (for callbacks and webhooks)
VITE_APP_URL=http://localhost:5173

# ====================================
# OPTIONAL SETTINGS
# ====================================
# Sentry DSN for error tracking (optional)
# VITE_SENTRY_DSN=your-sentry-dsn

# Analytics tracking ID (optional)
# VITE_ANALYTICS_ID=your-analytics-id

# Enable debug logging (development only)
VITE_DEBUG=false

# ====================================
# RATE LIMITING (UPSTASH REDIS)
# ====================================
# Optional: For advanced rate limiting with Redis
# Get from: https://console.upstash.com
# UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token-here

# ====================================
# ERROR TRACKING (SENTRY)
# ====================================
# Optional: For production error monitoring
# Get from: https://sentry.io
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ====================================
# PUSH NOTIFICATIONS (VAPID KEYS)
# ====================================
# Required for push notifications
# Generate at: https://vapidkeys.com
# VITE_VAPID_PUBLIC_KEY=your-public-key
# VAPID_PRIVATE_KEY=your-private-key

# ====================================
# FEATURE FLAGS
# ====================================
VITE_ENABLE_2FA=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
